# Car Recommendation System Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for chatbot)
OPENAI_API_KEY=your-openai-api-key-here

# Database (optional, defaults provided in docker-compose)
DATABASE_URL=postgresql://admin:admin123@localhost:5432/car_recsys

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=car_chatbot_vectors

# Redis Cache
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Models
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
